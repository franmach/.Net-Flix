             Route="MainPage">
        </ShellContent>

        <ShellContent
             Title="Home"
             Icon="home"
             ContentTemplate="{DataTemplate pages:MainPage}"
             Route="MainPage">  
        </ShellContent>
        
        
        <ShellContent
             Title="Favorites"
             Icon="fav"
             ContentTemplate="{DataTemplate pages:MainPage}"
             Route="MainPage">  
        </ShellContent>
        
        <ShellContent
             Title="Profile"
             Icon="user"
