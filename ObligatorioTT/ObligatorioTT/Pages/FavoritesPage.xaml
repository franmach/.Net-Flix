<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ObligatorioTT.Pages.FavoritesPage"
             xmlns:vm="clr-namespace:ObligatorioTT.ViewModels"
             xmlns:models="clr-namespace:ObligatorioTT.Models"
             x:DataType="vm:FavoritesViewModel"
             Title="Mis Favoritos">

    <ContentPage.Content>
        <CollectionView ItemsSource="{Binding FavoriteMovies}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Media">
                    <StackLayout Padding="5">
                        <Label Text="{Binding DisplayTitle}" FontSize="16" FontAttributes="Bold" />
                        <Label Text="{Binding ReleaseDate, StringFormat='Fecha de lanzamiento: {0:yyyy}'}" FontSize="12" TextColor="Gray" />
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </ContentPage.Content>
</ContentPage>